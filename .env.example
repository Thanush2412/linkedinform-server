# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/linkedinform

# JWT Configuration
JWT_SECRET=your-local-jwt-secret
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-local-email@gmail.com
SMTP_PASS=your-local-app-specific-password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-local-google-client-id
GOOGLE_CLIENT_SECRET=your-local-google-client-secret

# API Configuration
API_URL=http://localhost:5000/api

# Default Admin and Superadmin configuration
DEFAULT_ADMIN_EMAIL=admin@localhost.com
DEFAULT_ADMIN_PASSWORD=LocalAdmin@123
SUPERADMIN_EMAIL=superadmin@localhost.com
SUPERADMIN_PASSWORD=LocalSuperAdmin@123

# Google API Configuration
GOOGLE_MAPS_API_KEY=your_local_google_maps_api_key

# BhashSMS Configuration
BHASHSMS_USER=local_bhashsms_user
BHASHSMS_PASSWORD=local_bhashsms_password
BHASHSMS_SENDER_ID=LOCAPP

# Client Configuration
CLIENT_PORT=3000