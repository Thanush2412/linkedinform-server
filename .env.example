# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/linkedinform

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Configuration
API_URL=http://localhost:5000/api

# Default Admin and Superadmin configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin@123
SUPERADMIN_EMAIL=superadmin@example.com
# Leave SUPERADMIN_PASSWORD empty to auto-generate a secure password on first start
SUPERADMIN_PASSWORD=

# Google API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# MSG91 Configuration
MSG91_AUTH_KEY=your_msg91_api_key
MSG91_TEMPLATE_ID=your_template_id
MSG91_SENDER_ID=REGAPP

# Client Configuration
CLIENT_PORT=3000